        "minimatch": "3.0.4",
        "mkdirp": "0.5.1",
        "mocha": "3.1.2",
        "nyc": "^11.4.1",
        "oni-release-downloader": "0.0.8",
        "opencollective": "1.0.3",
        "optimize-js-plugin": "0.0.4",
        "prettier": "^1.10.2",
        "pretty-quick": "^1.2.2",
        "react-hot-loader": "1.3.1",
        "react-motion": "0.5.2",
        "react-redux": "5.0.6",
        "react-transition-group": "2.2.1",
        "react-virtualized": "^9.18.0",
        "redux": "3.7.2",
